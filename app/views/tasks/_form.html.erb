<%= simple_form_for @task do |f| %>
  <%= f.input :title, required: true %>

  <%= f.input :is_done %>

  <%= f.input :note %>

  <%= f.input :deadline_at, required: false, include_blank: true%>

  <%= f.association :category, required: false, collection: Category.where(:user_id => current_user.id) %>

  <%= f.association :tags, as: :check_boxes, collection: Tag.where(:user_id => current_user.id) %>

  <%= f.button :submit %>
  <%= f.button :button, "Reset", type: :reset %>

<% end %>