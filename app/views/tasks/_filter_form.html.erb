<%= simple_form_for :search, url: tasks_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :category, required: false, selected: nil, include_blank: true , collection: Category.where(:user_id => current_user.id)%>
  <%= f.input :tags, required: false, selected: nil, include_blank: true,  collection: Tag.where(:user_id => current_user.id)%>
  <%= f.submit "Search" %>
<% end %>