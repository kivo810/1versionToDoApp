<p>
<h1><%=link_to 'TASKS', root_path %></h1>
</p>

<div>
  <%= link_to 'Pending', pending_tasks_path %>
  <%= link_to 'Completed', completed_tasks_path %>
</div>

<%= will_paginate @tasks %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Is done</th>
    <th>Note</th>
    <th>Deadline At</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Category</th>
    <th>Tags</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.is_done %></td>
      <td><%= task.note%></td>

      <% if !(task.deadline_at.nil?) %>
        <td><%= task.deadline_at.strftime('%H:%M %n %d.%m.%Y') %>
      <% else %>
        <td></td>
      <% end %>

      <td><%= task.created_at.strftime('%H:%M %n %d.%m.%Y')  if task.created_at != nil%></td>
      <td><%= task.updated_at.strftime('%H:%M %n %d.%m.%Y')  if task.updated_at != nil%></td>

      <% if !(task.category.nil?) %>
        <td bgcolor="<%= task.category.color %>"><%= task.category.title %></td>
      <% else %>
        <td></td>
      <% end %>

      <% if task.tags.any? %>
        <td><%= task.tags.map{|tag| tag.title}.join(", ") %> </td>
      <% else %>
        <td></td>
      <% end %>

      <td><%= link_to 'Show', task %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<button>
  <%= link_to "New Task", new_task_path %>
</button>
<button type="button"><%= link_to 'Settings', settings_path %></button>

<%= render 'filter_form', task: @task %>

