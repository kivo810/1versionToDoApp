<p id="notice"><%= notice %></p>

<div align="center" class="mx-auto">
  <h1>Categories</h1>
  <%= '<h1 class="display-3 text-muted">There are no categories...</h1>'.html_safe if @categories.length == 0 %>
  <div class="card-columns">

    <% @categories.each do |category| %>
      <div class="card text-center border-secondary mb-2">
        <h5 class="card-header text-white" style="background-color: <%= category.color %>;"><%= category.title %></h5>
        <div class="card-body">
          <p>
            Id: <span class="font-weight-bold"><%= category.id %></span><br>
            <small>Created at <%= l category.created_at, format: '%H:%M %d.%m.%Y'%> |</small>
            <small>Updated at <%= l category.updated_at, format: '%H:%M %d.%m.%Y'%></small>
          </p>
          <%= link_to 'Show', category %> |
          <%= link_to 'Edit', edit_category_path(category) %> |
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="container pagination justify-content-center" >
    <%= paginate @categories, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>

</div>
<%#= link_to 'New Category', new_category_path %>
<a type="button" class="btn btn-outline-warning" href=<%= new_category_path %>>New Category
</a>
